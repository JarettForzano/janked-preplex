{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "jsx": "react-jsx",
      "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }